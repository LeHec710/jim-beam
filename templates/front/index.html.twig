{% extends 'front/base.html.twig' %}
{% set currentPage = 'front_home' %}
{% block body %}

<div class="container-fluid flex-grow-1 flex-center animate__animated animate__fadeIn delay-3 ">
    <div class="container text-center" style="max-width: 1000px">
        <div class="row mt-3">
            <div class="col"> 
                <h3 class="text-uppercase text-center text-light">Participez a notre grand jeu pour tenter de gagner:</h3>
            </div>
        </div>
        <div class="my-3 my-lg-5">
            {% for product in lottery.products %}
                <div class="row align-items-center">
                        <div class="col-4">
                            <img src="{{ asset('uploads/' ~ product.picture )}}" height="200" style="object-fit: contain" class="w-100" alt="{{product.name}}">
                        </div>
                    <div class="col-8">
                        <h3 class="text-uppercase text-start text-dark">{{product.name}}</h3>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="row">
            <div class="col">
                <h3 class="text-uppercase text-center text-light">TESTEZ VOS CONNAISSANCES <span class="text-dark">JIM BEAM</span> EN 3 QUESTIONS !</h3>
            </div>
        </div>
        <form novalidate id="form" class="needs-validation">
            <div class="row">
                <div class="col d-flex mt-4">
                    <div class="form-check mx-auto" style="width: fit-content">
                        <input class="form-check-input" type="checkbox" value="" id="cgu" required>
                        <label class="form-check-label text-uppercase text-white fs-4 ms-2" style="margin-top: -2px" for="cgu">
                            J'accepte le reglement du jeu
                        </label>
                        <div class="invalid-feedback">
                            Vous devez accepter le reglement du jeu.
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <button type="submit" class="btn mt-3 btn-primary custom-btn-light">Participer</button>
                </div>
            </div>
        </form>
    </div>
</div>


{% endblock %}

{% block javascripts %}
{{ parent()}}

<script>
$("#form").on("submit", function() {
    if($(this)[0].checkValidity()) {
        window.location.href = "{{ path('front_quiz')}}"
    }
})
</script>
{% endblock %}
