{% extends 'base.html.twig' %}

{% block title %}Gift{% endblock %}

{% block body %}
    <h1>Gift</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ gift.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ gift.name }}</td>
            </tr>
            <tr>
                <th>Instant_at</th>
                <td>{{ gift.instantAt ? gift.instantAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Win_at</th>
                <td>{{ gift.winAt ? gift.winAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Is_delivered</th>
                <td>{{ gift.isDelivered ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Delivered_at</th>
                <td>{{ gift.deliveredAt ? gift.deliveredAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('gift_index') }}">back to list</a>

    <a href="{{ path('gift_edit', {'id': gift.id}) }}">edit</a>

    {{ include('gift/_delete_form.html.twig') }}
{% endblock %}
