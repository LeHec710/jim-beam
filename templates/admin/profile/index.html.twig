{% extends 'admin/base.html.twig' %}

{% set page_name = 'Mon profil' %}

{% set menu = 'profile' %}

{% set breadcrumbs = [
    {"title": page_name, 'url' : ""},
] %}

{% block body %}

    {{ form_start(form, {'attr': {'novalidate': 'novalidate','class': 'needs-validation', 'autocomplete': 'off'}}) }}

    <div class="card bg-secondary shadow">

        <div class="card-header border-0">
            <div class='row align-items-center'>
                <div class="col">
                    <h3 class="mb-0">{{page_name}}</h3>
                </div>
                <div class="col text-right">
                    <button class="btn btn-icon btn-success" type='submit' data-toggle="tooltip" data-animation="false" title="" data-original-title="Enregistrer le formulaire">
                        <span class="btn-inner--icon"><i class="fa fa-save"></i></span>
                    </button>

                        <a href="{{ path('profile_form_avatar') }}" class="btn btn-primary"><i class="fas fa-portrait"></i> Modifier ma photo</a>

                </div>
            </div>
        </div>

        <div class="card-body">
            <h6 class="heading-small text-muted mb-4">Informations personnelles</h6>

            <div class="row">
                <div class="col-lg-4">
                    {{ form_widget(form.lastname) }}
                </div>
                <div class="col-lg-4">
                    {{ form_widget(form.firstname) }}
                </div>
                <div class="col-lg-4">
                    {{ form_widget(form.function) }}
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    {{ form_widget(form.email) }}
                </div>
                <div class="col-lg-3">
                    {{ form_widget(form.password.first) }}
                </div>
                <div class="col-lg-3">
                    {{ form_widget(form.password.second) }}
                </div>
            </div>
            <div class="row">
            </div>
            <div class="row">
                <div class="col-lg-3">
                    {{ form_widget(form.phoneMobile) }}
                </div>
                <div class="col-lg-3">
                    {{ form_widget(form.phoneFix) }}
                </div>
            </div>


        </div>

        <div class="card-footer">
            <button class="btn btn-icon btn-success" type='submit' >
                <span class="btn-inner--icon"><i class="fa fa-save"></i></span>
                <span class="btn-inner--text">Enregistrer</span>
            </button>

            <a class="btn btn-icon btn-sm" href='{{path("admin_home_index")}}'>
                <span class="btn-inner--icon"><i class="fa fa-arrow-left"></i></span>
                <span class="btn-inner--text">Annuler</span>
            </a>

        </div>

    </div>

    {{ form_end(form) }}

{% endblock %}

{% block javascripts %}
    {{ parent()}}

    <script>
    setTimeout(function() {
        $("#profile_password_first").val("");
    }, 500);
    setTimeout(function() {
        $("#profile_password_first").val("");
    }, 1000);
    </script>
{% endblock %}
